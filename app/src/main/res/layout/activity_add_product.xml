<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_product">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Register">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="150dp"
                android:layout_height="498dp"
                android:clickable="false"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.595">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Price"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Phone Number"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Description"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/negotiable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Category"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textextra"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/takeimage"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:gravity="center"
                    android:text="Take Photo/Select from gallery"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="240dp"
                android:layout_height="499dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.598">

                <EditText
                    android:id="@+id/prod_title"
                    android:layout_width="291dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/prod_price"
                    android:layout_width="293dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/prod_pn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/prod_desc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/radioGroup_select_first"
                        android:layout_width="224dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/furniture_radio"
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:text="Furniture" />

                        <RadioButton
                            android:id="@+id/electronic_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Electronics" />


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"

                    >

                    <RadioGroup
                        android:id="@+id/radioGroup_select_second"
                        android:layout_width="224dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/kitchen_radio"
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:text="Kitchen" />

                        <RadioButton
                            android:id="@+id/organizer_radio"
                            android:layout_width="128dp"
                            android:layout_height="match_parent"
                            android:text="Organizer" />

                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"

                    >

                    <RadioGroup
                        android:id="@+id/radioGroup_select"
                        android:layout_width="224dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/misc_radio"
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:text="Miscellenous" />


                    </RadioGroup>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageview"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:src="@drawable/ic_baseline_camera_alt_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="438dp"
                android:layout_height="182dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">


                <TextView
                    android:layout_width="443dp"
                    android:layout_height="match_parent"
                    android:background="#0099CC"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Add Product"
                    android:textColor="@color/white"
                    android:textSize="30sp">

                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/bt_finish"
                android:layout_width="190dp"
                android:layout_height="57dp"
                android:layout_marginTop="20dp"
                android:text="Finish"
                android:textSize="18sp"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation_menu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:alpha="50"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bt_finish"
                app:menu="@menu/navigation_menu" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>