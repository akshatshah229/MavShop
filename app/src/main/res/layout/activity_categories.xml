<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categories">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0099CC"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="20dp"
                android:text="Categories"
                android:textColor="@color/white"
                android:textSize="30sp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#FFDFD3"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="end"
                    android:padding="10dp"
                    android:paddingRight="10dp"
                    android:text="Furniture"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="45sp">

                </TextView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/furniture">

                </ImageView>

                <Button
                    android:id="@+id/furniture_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenFurniture"
                    android:text="See All"
                    android:textColor="@color/black"></Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#C5C9AC"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Electronics"
                    android:textColor="@color/black"
                    android:textSize="45sp"></TextView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/electronics">

                </ImageView>

                <Button
                    android:id="@+id/electronics_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenElectronics"
                    android:text="See All"
                    android:textColor="@color/black"></Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F3D67F"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="Kitchenware"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="45dp"></TextView>

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/kitchenware">

                </ImageView>

                <Button
                    android:id="@+id/kitchenware_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenKitchenware"
                    android:text="See All"
                    android:textColor="@color/black"></Button>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#FEF3DE"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Organizers"
                    android:textColor="@color/black"
                    android:textSize="45sp"></TextView>

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/organizers">

                </ImageView>

                <Button
                    android:id="@+id/organizers_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenOrganizers"
                    android:text="See All"
                    android:textColor="@color/black"></Button>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#D9E5AE"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="Books"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="45sp"></TextView>

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/books">

                </ImageView>

                <Button
                    android:id="@+id/books_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenBooks"
                    android:text="See All"
                    android:textColor="@color/black"></Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#B3D6E8"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Miscellaneous"
                    android:textColor="@color/black"
                    android:textSize="45sp"></TextView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/miscellaneous"></ImageView>

                <Button
                    android:id="@+id/misc_btn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="OpenMisc"
                    android:text="See All"
                    android:textColor="@color/black">

                </Button>

            </RelativeLayout>


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation_menu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:alpha="50"
                android:paddingBottom="10dp"
                app:menu="@menu/navigation_menu" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
