<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll|enterAlways"
    tools:context=".categories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Categories"
            android:textSize="30sp"
            android:background="#0099CC"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Furniture"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:fontFamily="sans-serif-thin">

            </TextView>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/furniture"
                android:paddingLeft="10dp">

            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#C5C9AC"
                android:text="Electronics"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif-thin">
            </TextView>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/electronics"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true">

            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#F3D67F"
                android:text="Kitchenware"
                android:textColor="@color/black"
                android:textSize="45dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-thin">
            </TextView>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:src= "@drawable/kitchenware"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true">

            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FEF3DE"
                android:text="Organizers"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif-thin">
            </TextView>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:src= "@drawable/organizers"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true">

            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#D9E5AE"
                android:text="Books"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-thin">
            </TextView>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                android:src="@drawable/books">

            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#B3D6E8"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="Miscellaneous"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-thin"
                android:textSize="45sp">
            </TextView>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                android:src="@drawable/miscellaneous"
                android:layout_alignParentRight="true">
            </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="See All"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFDFD3"
                android:textColor="@color/black">
            </Button>
        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_alignParentBottom="true"
            android:id="@+id/navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:menu="@menu/navigation_menu"
            app:itemIconTint="#0099CC"
            android:paddingBottom="10dp">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>
</ScrollView>